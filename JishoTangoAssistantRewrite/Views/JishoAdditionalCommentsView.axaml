<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:JishoTangoAssistantRewrite.ViewModels"
             xmlns:views="clr-namespace:JishoTangoAssistantRewrite.Views"
             x:Class="JishoTangoAssistantRewrite.Views.JishoAdditionalCommentsView"
             x:DataType="vm:JishoAdditionalCommentsViewModel">
	<StackPanel>
		<TextBlock TextBlock.FontWeight="Bold" Text="Additional Comments"/>
		<TextBox x:Name="additionalCommentsTextBox" Text="{Binding AdditionalComments}" TextWrapping="Wrap" Height="70" MinHeight="27" HorizontalAlignment="Stretch" AcceptsReturn="True"/>
	</StackPanel>
</UserControl>
